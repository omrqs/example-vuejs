#EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_size = 2

# 4 space indentation
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# space indentation (no size specified)
[*.js]
indent_style = space
indent_size = 2

# space indentation (no size specified)
[*.css]
indent_style = space
indent_size = 2

# space indentation (no size specified)
[*.vue]
indent_style = space
indent_size = 2

# Indentation override for all JS under lib directory
[lib/**.js]
indent_style = space
indent_size = 2

# 4 space indentation
[*.json]
indent_style = space
indent_size = 2

# 4 space indentation
[*.bowerrc]
indent_style = space
indent_size = 2

charset = utf-8
